{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "run-s build:*",
    "build:01": "shx rm -rf ./build",
    "build:02": "pnpm run -r --workspace-concurrency 1 build",
    "build:03": "shx mv ./packages/app/build ./build",
    "bump-deps": "ncu -u --deep",
    "checktypes": "pnpm run -r --workspace-concurrency 1 checktypes",
    "clean": "pnpm run -r clean",
    "dev:app": "pnpm run -r --workspace-concurrency 1 dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky",
    "script:download": "pnpm --filter \"download\" dev --data-dir ../../packages/app/src/lib/server.data --poster-dir ../../packages/app/static/posters",
    "test": "pnpm run -r --workspace-concurrency 1 test"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.7",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-check-updates": "^17.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "shx": "^0.3.4"
  }
}
