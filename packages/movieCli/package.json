{
  "name": "movie-cli",
  "version": "1.0.0",
  "bin": {
    "download": "./dist/index.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build.off": "run-s clean checktypes test pkgroll",
    "clean": "shx rm -rf ./dist ./coverage",
    "checktypes": "tsc --noEmit",
    "dev:load": "dotenvx run -- tsx ./src/index.ts load -u dev -i tt0073195 -d ../../__data__ -f",
    "dev:remove": "dotenvx run -- tsx ./src/index.ts remove -u dev -i tt0062622 -d ../../__data__",
    "dev:flag": "dotenvx run -- tsx ./src/index.ts flag -u dev -i tt0062622 -s 4b3b1a0e -r test -d ../../__data__",
    "dev:index": "dotenvx run -- tsx ./src/index.ts index -u dev -d ../../__data__",
    "test": "jest --verbose",
    "pkgroll": "pkgroll --minify"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/lodash": "^4.17.12",
    "@types/node": "^22.8.1",
    "@types/yargs": "^17.0.33",
    "adm-zip": "^0.5.16",
    "colorette": "^2.0.20",
    "envalid": "^8.0.0",
    "glob": "^11.0.0",
    "lodash": "^4.17.21",
    "murmurhash": "^2.0.1",
    "yaml": "^2.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.21.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pkgroll": "^2.5.1",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
